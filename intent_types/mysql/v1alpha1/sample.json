{
  "api_version": "v1alpha1",
  "metadata": {
    "maintainer": "rohit@example.com",
    "documentation_link": "https://example.com/documentation",
    "labels": {
      "owner": "infrastructure@example.com"
    },
    "name": "my-mysql-instance",
    "description": "A MySQL database instance."
  },
  "kind": "mysql",
  "spec": {
    "version": "8.0",
    "server_variables": {
      "max_connections": "1000",
      "query_cache_size": "0"
    },
    "size": {
      "cpu": "100m",
      "memory": "100Mi",
      "volume": "50G"
    },
    "replication": {
      "enabled": true,
      "type": "master-slave",
      "replica_count": 2
    }
  },
  "disabled": false,
  "flavor": {
    "version": "1.0",
    "name": "standard"
  },
  "advanced": {
    "backup":{
      "enabled":false,
      "backup_window":"0 0 * * 7"
    }, 
    "monitoring": true
  }
}